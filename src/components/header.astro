  <div class="account-section">
    <button class="login-btn">LOG IND</button>
    <button class="heart-btn" aria-label="Favorites">
      <svg xmlns="http://www.w3.org/2000/svg" class="heart-icon" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
